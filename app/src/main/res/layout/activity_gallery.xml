<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/photoWisata"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/malioboro"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/titleWisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wisata Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:layout_marginBottom="4dp"/>


        <TextView
            android:id="@+id/descriptionLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="keterangan lokasi"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deskripsi wisata"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sumber : "/>

            <TextView
                android:layout_toRightOf="@+id/sumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sumber"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>